<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:background="@drawable/background"
    android:gravity="fill"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/button_Bill"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/audio_bill" />

    <TextView
        android:id="@+id/textView_Bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_Bill"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_Bill"
        android:alpha=".8"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/bill_intro"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/button_Tina"
        android:layout_width="100dp"
        android:layout_height="86dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_Bill"
        android:layout_marginTop="120dp"
        android:background="@drawable/audio_tina_trisha" />

    <TextView
        android:id="@+id/textView_Tina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_Tina"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button_Tina"
        android:alpha=".8"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore."
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/button_Abraham"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/button_Bill"
        android:layout_below="@+id/button_Tina"
        android:layout_marginTop="10dp"
        android:background="@drawable/audio_abraham" />

    <TextView
        android:id="@+id/textView_Abraham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_Abraham"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_Abraham"
        android:alpha=".8"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore."
        android:textColor="@color/white" />

</RelativeLayout>